        function BindEntityForW8EXPForm() {

            $.ajax({
                url: '@Url.Action("BindEntityForW8EXPForm", "Entity")',
                type: 'POST',

                success: function (result) {
                    // Check if the action was successful
                    if (result.success) {
                        // Clear existing options from the dropdown
                        $('#EntityType').empty();


                        // Add "Please Select" option as the first option
                        $('#EntityTypeW8').prepend($('<option>', {
                            value: '',
                            text: 'Please Select'
                        }));

                        // Iterate over the updated entities and add new options to the dropdown
                        $.each(result.entitiesListW8, function (index, entity) {
                            $('#EntityTypeW8').append($('<option>', {
                                value: entity.Value,
                                text: entity.Text
                            }));
                        });

                    }
                },
                error: function () {
                    console.log('Error occurred.');
                }
            });

        }

