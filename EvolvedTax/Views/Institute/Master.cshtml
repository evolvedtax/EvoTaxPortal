@model IQueryable<InstituteMasterResponse>
@{
    ViewData["Title"] = "Master";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>INSTITUTE MASTER</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Institute/Business Name</th>
                                <th>Official Email</th>
                                <th>Support Email</th>
                                <th>Contact Number</th>
                                <th>Address</th>
                                <th>State/Province Zip Code</th>
                                <th>Country</th>
                                <th>Active/Inactive</th>
                                <th>Status Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@Html.ActionLink(item.InstitutionName,"Entities","Institute",new{instituteId = item.InstId}) </td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.SupportEmail</td>
                                        <td>@item.Phone</td>
                                        <td>@string.Concat(item.Madd1," ",item.Madd2)</td>
                                        <td>@string.Concat(item.Mcity,", ",item.Status,item.Mprovince," ",item.Mzip)</td>
                                        <td>@item.Mcountry</td>
                                        @{
                                            var status = "";
                                        }
                                        @if (item.Status == "1")
                                        {
                                            status = "Active";
                                        }
                                        else if (item.Status == "2")
                                        {
                                            status = "Inactive";
                                        }
                                        else if (item.Status == "3")
                                        {
                                            status = "Approval Pending ";
                                        }
                                        else if (item.Status == "4")
                                        {
                                            status = "Renewal Pending";
                                        }
                                        <td>@status</td>
                                        <td>@item.StatusDate?.ToString("MM-dd-yyyy")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <script type="text/javascript">

        // Upgrade button class name
        $.fn.dataTable.Buttons.defaults.dom.button.className = 'btn btn-white btn-sm';
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        extend: 'excel',
                        title: 'EvolvedTax',
                        text: '<i class="fa fa-file-excel-o"></i> Export to Excel',
                        className: 'btn-excel'
                    },
                    {
                        text: '<i class="fa fa-exclamation-circle"></i> Status Change',
                        className: 'btn-recycle-bin',
                        //action: function (e, dt, button, config) {
                        //    window.location.href = '/Institute/ClientsRecyleBin?entityId=' + $('#changeEntity').val();
                        //}
                    },
                ]

            });
        });
    </script>
}