@model IQueryable<InstituteClientResponse>
@{
    ViewData["Title"] = "Master";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
    var formTypes = ViewBag.FormTypes as List<string>;
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                <form id="myForm" method="post" action="/Form/Report" class="form-inline">
                    <div class="form-group">
                        <label for="formType" class="mr-2">Select Form Name:</label>
                        <select id="formType" name="formType" class="form-control">
                            <option value="">Please Select</option>
                            @foreach (var formType in formTypes)
                            {
                                <option value="@formType">@formType</option>
                            }
                        </select>
                        <input type="submit" class="btn btn-primary mr-2" value="Search" />
                    </div>
                  
                </form>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Entity Name</th>
                                <th>Partner Name</th>
                                <th>Official Email</th>
                                <th>Contact Number</th>
                                <th>Form Completed</th>
                                <th>Form Completion Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EntityName</td>
                       
                                        <td>@string.Concat(item.PartnerName1," ",item.PartnerName2)</td>
                                        <td>@item.ClientEmailId</td>
                                        <td>@item.PhoneNumber</td>
                                        <td><a href="~/@item.FileName" target="_blank">@item.FileName</a></td>
                                        <td>@item.ClientStatusDate?.ToString("MM-dd-yyyy")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <script type="text/javascript">

        // Upgrade button class name
        $.fn.dataTable.Buttons.defaults.dom.button.className = 'btn btn-white btn-sm';
        $(document).ready(function () {

            $("select").select2({
                theme: 'bootstrap4',
                placeholder: "Please Select",
                //allowClear: true
            });

            var lastSelectedFormType = '@(TempData["LastSelectedFormType"] as string)';
            if (lastSelectedFormType !== '') {
                $("#formType").val(lastSelectedFormType).change();
            }

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        extend: 'excel',
                        title: 'W8(s)/W9(s) Record',
                        text: '<i class="fa fa-file-excel-o"></i> Export to Excel',
                        className: 'btn-excel'
                    },
                    //{
                    //    text: '<i class="fa fa-exclamation-circle"></i> Status Change',
                    //    className: 'btn-recycle-bin',
                    //    //action: function (e, dt, button, config) {
                    //    //    window.location.href = '/Institute/ClientsRecyleBin?entityId=' + $('#changeEntity').val();
                    //    //}
                    //},
                ]

            });
        });
    </script>
}