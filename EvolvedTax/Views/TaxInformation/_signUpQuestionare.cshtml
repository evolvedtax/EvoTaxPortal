@model InstituteSignUpFormRequest



<div class="tab">
    <div style="margin-bottom:5%">
        <img src="~/images/evolved_tax_mark_logo.png" width="50" height="50" />
        <h3>Welcome to EvoTax Portal</h3>
    </div>
    <div class="form-group">
      @*  <label><span class="text-danger">*</span></label>*@
        <input id="firstName" asp-for="SUFirstName" type="text" class="form-control bordertext" required placeholder="First Name">
    </div>


    <div class="form-group">
  
        <input id="lastName" asp-for="SULastName" type="text" class="form-control bordertext" required placeholder="Last Name" />
    </div>


    <div class="form-group">
        
        <input id="InstitutionName" asp-for="SUInstitutionName" type="text" class="form-control bordertext" required placeholder="Institution Name">
    </div>


    <div class="form-group">
        <input id="EmailAddress" asp-for="SUEmailAddress" type="email" class="form-control bordertext" required placeholder="Official Email">
        <span asp-validation-for="SUEmailAddress"></span>
    </div>


    <div class="form-group">
        <input id="SupportEmailAddress" asp-for="SupportEmailAddress" type="email" class="form-control bordertext" required placeholder="Support Email">
    </div>


    <div class="form-group">
        <input id="Phone" asp-for="Phone" type="text" class="form-control bordertext" required placeholder="Phone Number">
    </div>
    <div class="form-group">
 
        <input id="Password" asp-for="SUPassword" type="password" class="form-control bordertext" required placeholder="Password">
        <span asp-validation-for="SUPassword" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input id="ConfirmPassword" asp-for="SUConfirmPassword" type="password" class="form-control bordertext" required placeholder="Confirm Password">
        <span asp-validation-for="SUConfirmPassword" class="text-danger"></span>
    </div>  


</div>


<div class="tab">
    <div style="margin-bottom:5%">
        <img src="~/images/evolved_tax_mark_logo.png" width="50" height="50" />
        <h3>Welcome to EvoTax Portal</h3>
    </div>
    <div class="form-group">
    
        <select id="TypeofEntity" asp-for="SUTypeofEntity" asp-items="ViewBag.EntityType" class="select2 ddl" required>
            <option></option>
        </select>
    </div>


    <div class="form-group">
        
        <select id="country" asp-for="SUMCountry" asp-items="ViewBag.CountriesList" onChange="ShowHideProvince(this)" class="select2" required>
            <option></option>
        </select>
    </div>

    <div id="AddressFields" hidden>

        <div class="form-group">
            <input id="adreess1" asp-for="SUMMAdd1" type="text" class="form-control bordertext" required placeholder="Address Line1">
            <span asp-validation-for="SUMMAdd1" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input id="adreess2" asp-for="SUMMAdd2" type="text" class="form-control bordertext" placeholder="Address Line2">
        </div>


        <div class="form-group">
            <input id="city" asp-for="SUMCity" type="text" class="form-control bordertext" required placeholder="City">
        </div>


        <div id="stateDiv" class="form-group" hidden>
            <select id="state" asp-items="ViewBag.StatesList" asp-for="SUMState" class="select2">
                <option></option>
            </select>
        </div>
        <div id="provinceDiv" class="form-group">
            <input id="province" asp-for="SUMProvince" type="text" class="form-control bordertext" placeholder="Province">
        </div>

        <div class="form-group">
            <input id="zipCode" asp-for="SUMZip" type="text" class="form-control bordertext" required placeholder="Zip Code">
        </div>

    </div>

    <div class="mt-3 mb-3 ml-3" hidden>
        <input id="SamePermAddress" type="checkbox" checked onChange="HideAddress(this)" name="SamePermAddress" class=""> Permanent address is the same as the Mailing address
    </div>
    <div id="SamePermAddressDiv" class="form-box" hidden>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Country <span class="text-danger">*</span></label>
                    <select id="countryPerm" asp-for="SUPCountry" asp-items="ViewBag.CountriesList" onChange="ShowHideProvincePerm(this)" class="select2" required>
                        <option></option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Address Line1 <span class="text-danger">*</span></label> <b>(Do not use a P.O. box or in-care-of address)</b>
                    <input id="adreess1Perm" asp-for="SUMPAdd1" type="text" class="form-control" required>
                    <span asp-validation-for="SUMPAdd1" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Address Line2</label>
                    <input id="adreess2Perm" asp-for="SUPPAdd2" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label>City <span class="text-danger">*</span></label>
                    <input id="cityPerm" asp-for="SUPCity" type="text" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div id="statePermDiv" class="form-group" hidden>
                    <label>State </label>
                    <select id="statePerm" asp-items="ViewBag.StatesList" asp-for="SUPState" class="select2">
                        <option></option>
                    </select>
                </div>
                <div id="provincePermDiv" class="form-group">
                    <label>Province</label>
                    <input id="provincePerm" name="SUPProvince" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label id="lblZipCodePerm">Zip Code <span class="text-danger"> *</span></label>
                    <input id="zipCodePerm" asp-for="SUPZip" type="text" class="form-control" required>
                </div>
            </div>
        </div>
    </div>
</div>


