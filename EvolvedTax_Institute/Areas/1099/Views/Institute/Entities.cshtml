@model InstituteEntityViewModel
@{
    ViewData["Title"] = "Entity";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
<style>
    .bootstrap-tagsinput {
        width: 100%;
        border-radius: 0.6rem;
        border: 2px solid #929292;
    }

    .hide-counter::-webkit-inner-spin-button {
        display: none;
    }

    .dataTables_filter {
        /*position: absolute;
                        top: 0;
                        left: 15%;*/
        padding: 0;
        padding-right: 70%
    }
</style>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-8">
                        </div>
                        <div id="uploadDataDiv" class="col-md-3 mb-2" hidden>
                            <label>Upload Data</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input id="uploadEntities" type="file" class="custom-file-input" accept=".xlsx, .xls">
                                    <label class="custom-file-label" for="uploadEntities">Choose file</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    @*<div class="col-md-12"><input id="importData" type="button" class="btn btn-primary" value="Import Entity Data" /></div>*@

                    <div class="table-responsive">
                        @* <div class="form-group" style="margin-bottom:-2rem">
                        <label for="pageLengthInput">Show</label>
                        <input type="text" id="pageLengthInput" value="25" class="form-control" style="width: 50px; display: inline-block;">
                        <label for="pageLengthInput">entries</label>
                        </div>*@
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="selectAll"></th>
                                    <th>Entity Name</th>
                                    <th>EIN</th>
                                    <th>Entity Registration Date</th>
                                    <th>Address</th>
                                    <th hidden></th>
                                    <th hidden></th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th hidden>Province (If Applicable)</th>
                                    <th>Zip</th>
                                    <th>Country of Incorporation</th>
                                    <th>Last Updated By</th>
                                    <th>Last Updated On</th>
                                    <th>Role</th>
                                    <th>Lock/Unlock</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.InstituteEntitiesResponse.Any())
                                {
                                    foreach (var item in Model.InstituteEntitiesResponse)
                                    {
                                        <tr id="@item.EntityId">
                                            <td><input type="checkbox" class="rowCheckbox" value="@item.EntityId"></td>
                                            <td>@Html.ActionLink(item.EntityName,"SelectForm","Form1099",new{entityId = item.EntityId}) </td>
                                            <td>@item.Ein</td>
                                            <td>@item.EntityRegistrationDate?.ToString("MM-dd-yyyy")</td>
                                            <td>@string.Concat(item.Address1," ",item.Address2)</td>
                                            <td hidden>@item.Address1</td>
                                            <td hidden>@item.Address2</td>
                                            <td>@item.City</td>
                                            <td>@item.State</td>
                                            <td hidden>@item.Province</td>
                                            <td>@item.Zip</td>
                                            <td>@item.Country</td>
                                            <td>@item.LastUpdatedByName</td>
                                            <td>@item.LastUpdatedDate?.ToString("MM-dd-yyyy")</td>
                                            <td>@item.Role</td>
                                            <td class="text-center">
                                                @if (item?.IsLocked ?? false)
                                                {
                                                    <span class="fa fa-lock"></span>
                                                }
                                                else
                                                {
                                                    <span class="fa fa-unlock"></span>
                                                }
                                            </td>
                                            <td class="actions">
                                                <div class="dropdown">
                                                    <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="fa fa-bars"></span>
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <div class="dropdown-menu-horizontal">
                                                            @if (item?.IsLocked ?? false)
                                                            {
                                                                <a class="dropdown-item" href="javascript:void()" onclick="COMMON.confirmAlertActive('Unlock','/1099/Institute/LockUnlockEntity',{selectedValues:'@item?.EntityId',isLocked:'false'})">Unlock</a>
                                                            }
                                                            else
                                                            {
                                                              @*  <a class="dropdown-item edit-row" href="javascript:void()" data-toggle="modal" data-target="#editModal" data-row-id="@item?.EntityId">Edit</a>*@
                                                                <a class="dropdown-item" href="javascript:void()" onclick="COMMON.confirmAlert('Are you sure, you want to delete this record?','/1099/Institute/DeleteEntity','id=@item?.EntityId','')">Delete</a>
                         @*                                      <a class="dropdown-item" href="javascript:void()" onclick="getSubscriptionAndDelete('@item?.EntityId')">Delete</a>*@

                                                                <a class="dropdown-item" href="javascript:void()" onclick="COMMON.confirmAlertActive('Lock','/1099/Institute/LockUnlockEntity',{selectedValues:'@item?.EntityId',isLocked:'true'})">Lock</a>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal" id="shareModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 id="shareModelHeader" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form id="shareForm"
                      method="post"
                      data-ajax="true"
                      data-ajax-method="post"
                      data-ajax-mode="replace"
                      data-ajax-failure="COMMON.ajaxfailure"
                      data-ajax-loading="#ajax-loader"
                      data-ajax-success="ajaxsuccessShare"
                      data-ajax-url="@Url.Action("InviteUserForEntities","Institute")">

                    <input id="emailAddresses" name="emailAddresses" hidden />
                    <input id="entityNamesHidden" name="EntityNamesHidden" type="hidden" />
                    <div class="col-md-12">

                        <div>
                            <label>Invite People</label>
                            <input class="tagsinput form-control" type="email" placeholder="Enter e-mail address" />
                        </div>

                        <div class="row">
                            <div class="mt-2 col-md-4">
                                <label>Role</label>
                                <select name="role" class="selec2">
                                    <option value="Viewer">Viewer</option>
                                </select>
                            </div>
                            @*<div class="mt-2 col-md-8">
                            <label>Subscription</label>
                            <select asp-items="ViewBag.FormNameList" class="select2 form-control" id="FormNameList" multiple="multiple">
                            </select>
                            </div>*@
                        </div>

                        <div class="mt-4">
                            <label>Message (optional)</label>
                            <textarea class="form-control" placeholder="Add a message"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveShareBtn">Share</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script type="text/javascript">



        // Upgrade button class name
        $.fn.dataTable.Buttons.defaults.dom.button.className = 'btn btn-white btn-sm';
        $(document).ready(function () {
            $("select").select2({
                theme: 'bootstrap4',
                placeholder: "Select One",
                //allowClear: true
            });

            function updateModalHeader(selectedRows) {
                var headerText = "";
                var entityNames = [];
                var entityNamesWithId = [];

                var rolePromises = []; // Array to store the promises

                for (var i = 0; i < selectedRows.length; i++) {

                    var entity = selectedRows[i];
                    var entityId = entity.DT_RowId;//entity[1].match(/EntityId=(\d+)/)[1];

                    // Use an IIFE (Immediately Invoked Function Expression) to capture entityName correctly
                    (function (entityId) {
                        var entityName = $(entity[1]).text();

                        var rolePromise = fetchEntityRole(entityId)
                            .then(function (role) {
                                if (role !== "Viewer") {
                                    var Entitynames = entityName + "$" + entityId;
                                    entityNames.push(entityName);
                                    entityNamesWithId.push(Entitynames);
                                }
                            });

                        rolePromises.push(rolePromise); // Store the promise in the array
                    })(entityId);
                }

                Promise.all(rolePromises)
                    .then(function () {
                        if (entityNames.length > 0) {
                            var entityNamesFormatted = entityNames.join(", ");
                            var headerText = "Share access to <br/>" + entityNamesFormatted;
                            $("#shareModelHeader").html(headerText);
                            $("#entityNamesHidden").val(entityNamesWithId.join(","));
                        }
                    });
            }



            function fetchEntityRole(entityId) {
                return new Promise(function (resolve, reject) {
                    $.ajax({
                        url: '/1099/Institute/GetEntityRole', // Update the URL to your controller action
                        method: 'GET',
                        data: { entityId: entityId },
                        success: function (data) {
                            resolve(data.role);
                        },
                        error: function () {
                            reject();
                        }
                    });
                });
            }

            function ajaxsuccessShare(response) {
                if (response.Status == true) {
                    COMMON.notification(1, response.Message);
                    $("#shareModal").modal("hide");
                    //window.location.reload();
                } else {
                    COMMON.notification(2, response.Message);
                }

            }

            $('#saveShareBtn').click(function () {
                let form = $('#shareForm');
                if (form.valid()) {

                    var emails = [];
                    $(".tag.label-primary").each(function () {
                        emails.push($(this).text());
                    });
                    $('#emailAddresses').val(JSON.stringify(emails));
                    form.submit();
                    $("#shareModal").modal("hide");
                }
                return false;
            });

            $('.tagsinput').tagsinput({
                tagClass: 'label label-primary'
            });

            $('.tagsinput').on('itemAdded', function (event) {
                var email = event.item.trim();
                if (!isValidEmail(email)) {
                    $(this).tagsinput('remove', email);
                    COMMON.AlertSuccessMessage("Entity already shared", "This entity is already shared with entered user.", "error")
                }
            });

            function isValidEmail(email) {
                var entityId = $('#changeEntity').val();
                return COMMON.doAjaxGetWithJSONResponse('@Url.Action("ValidateEmailDomainAddressOnInvitation","Account")', { SUEmailAddress: email, EntityId: entityId })
            }





            //Masking
            $('.ein').attr('placeholder', '00-0000000');
            $('.ein').mask('00-0000000', { reverse: true });
            // Handle Edit button click event
            $('.edit-row').click(function () {
                // Get the row ID from the data attribute
                var rowId = $(this).data('row-id');

                // Retrieve the row data based on the ID
                var rowData = getRowData(rowId); // Implement your own function to retrieve the row data

                // Populate the form fields with the row data
                populateModalFields(rowData);
            });

            function getRowData(rowId) {
                var row = $("#" + rowId); // Select the row by its ID
                var rowData = {
                    EntityId: rowId,
                    EntityName: row.find("td:nth-child(2)").text(),
                    Ein: row.find("td:nth-child(3)").text(),
                    EntityRegistrationDate: row.find("td:nth-child(4)").text(),
                    Address1: row.find("td:nth-child(6)").text(),
                    Address2: row.find("td:nth-child(7)").text(),
                    City: row.find("td:nth-child(8)").text(),
                    State: row.find("td:nth-child(9)").text(),
                    Province: row.find("td:nth-child(10)").text(),
                    Zip: row.find("td:nth-child(11)").text(),
                    Country: row.find("td:nth-child(12)").text(),
                };

                return rowData;
            }
            // Function to populate modal input fields with row data
            function populateModalFields(rowData) {
                debugger
                var parts = rowData.EntityRegistrationDate.split('-');
                $('#entityId').val(rowData.EntityId);
                $('#enitytName').val(rowData.EntityName);
                $('#ein').val(rowData.Ein);
                $('#entityRegistrationDate').val(parts[2] + '-' + parts[0] + '-' + parts[1]);
                $('#address1').val(rowData.Address1);
                $('#address2').val(rowData.Address2);
                $('#city').val(rowData.City);
                $('#country').val(rowData.Country).change();
                $('#state').val(rowData.State).change();
                $('#province').val(rowData.Province);
                $('#zip').val(rowData.Zip);
            }
            var table = $('.dataTables-example').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        extend: 'collection',
                        text: '<i class="fa fa-ellipsis-h"></i>',
                        className: 'btn-menu-toggle',
                        buttons: [
                            {
                                extend: 'excel',
                                title: 'EvolvedTax',
                                text: '<i class="fa fa-file-excel-o"></i> Export to Excel',
                                className: 'btn-excel'
                            },
                            {
                                text: '<i class="fa fa-trash"></i> Trash',
                                className: 'btn-recycle-bin',
                                action: function (e, dt, button, config) {
                                    window.location.href = '/Institute/EntitiesRecyleBin';
                                }
                            },
                            {
                                text: '<i class= "fa fa-unlock" ></i> Unlock All',
                                className: 'btn-unlock-all',
                                action: function (e, dt, button, config) {
                                    var selectedValues = [];
                                    $('.rowCheckbox:checked').each(function () {
                                        selectedValues.push($(this).val());
                                    });

                                    if (selectedValues.length === 0) {
