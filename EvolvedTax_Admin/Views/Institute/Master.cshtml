@model IQueryable<InstituteMasterResponse>
@{
    ViewData["Title"] = "Master";
    Layout = "~/Views/Shared/_LayoutInstitute.cshtml";
}
<style>
    .center-dropdown {
        left: -312% !important;
        transform: translateX(-50%) !important;
    }

    .hide-counter::-webkit-inner-spin-button {
        display: none;
    }

    .dropdown-toggle::after {
        display: inline-block;
        margin-left: 0.255em;
        vertical-align: 0.255em;
        content: none;
        border-top: 0.3em solid;
        border-right: 0.3em solid transparent;
        border-bottom: 0;
        border-left: 0.3em solid transparent;
    }

    .table-container {
        position: relative;
    }

    .dataTables_filter {
        /*position: absolute;
            top: 0;
            left: 15%;*/
        padding: 0;
        padding-right: 70%
    }

    /*    div.dataTables_wrapper div.dataTables_info {
            padding-top: 1.85em;
        }*/
</style>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>INSTITUTE MASTER</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Account Holder Name@*<input id="searchName"/>*@</th>
                                        <th>Institute/Business Name</th>
                                        <th>Official E-mail</th>
                                        <th>Support E-mail</th>
                                        <th>Contact Number</th>
                                        <th>Address</th>
                                        <th>State/Province Zip Code</th>
                                        <th>Country</th>
                                        <th>Active/Inactive</th>
                                        <th>Status Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.FirstName @item.LastName</td>
                                                <td>@Html.ActionLink(item.InstitutionName,"Entities","Institute",new{instituteId = item.InstId}) </td>
                                                <td>*****</td>
                                                <td>*****</td>
                                                <td>*****</td>
                                                <td>*****</td>
                                                <td>*****</td>
                                                <td>*****</td>
                                                @{
                                                    var status = "";
                                                }
                                                @if (item.Status == "1")
                                                {
                                                    status = "Active";
                                                }
                                                else if (item.Status == "2")
                                                {
                                                    status = "Inactive";
                                                }
                                                else if (item.Status == "3")
                                                {
                                                    status = "Approval Pending ";
                                                }
                                                else if (item.Status == "4")
                                                {
                                                    status = "Renewal Pending";
                                                }
                                                <td>@status</td>
                                                <td>@item.StatusDate?.ToString("MM-dd-yyyy")</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <script type="text/javascript">

        // Upgrade button class name
        $.fn.dataTable.Buttons.defaults.dom.button.className = 'btn btn-white btn-sm';
        $(document).ready(function () {
            var table = $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        extend: 'collection',
                        text: '<i class="fa fa-ellipsis-h"></i>',
                        className: 'btn-menu-toggle',
                        buttons: [
                            {
                                extend: 'excel',
                                title: 'EvolvedTax',
                                text: '<i class="fa fa-file-excel-o"></i> Export to Excel',
                                className: 'btn-excel'
                            },
                            {
                                text: '<i class="fa fa-exclamation-circle"></i> Status Change',
                                className: 'btn-recycle-bin',
                                //action: function (e, dt, button, config) {
                                //    window.location.href = '/Institute/ClientsRecyleBin?entityId=' + $('#changeEntity').val();
                                //}
                            },
                        ],
                    }
                ],
                initComplete: function () {
                    //$('.dataTables_length').hide(); // Hide the original page length dropdown
                    $('.btn-menu-toggle').attr('data-toggle', 'tooltip').attr('data-placement', 'top').attr('data-original-title', 'Menu').tooltip();
                    // Add custom CSS class to the dropdown list container
                    $('.btn-menu-toggle').on('click', function () {
                        var dropdown = $(this).siblings('.dt-button-collection');
                        dropdown.addClass('center-dropdown');
                    });
                },
            });
        });
    </script>
}